

@using la_mia_pizzeria.Models
@model PizzeCategories


<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <main class="container">
        <div class="row text-center">
            <h1>Crea una nuova pizza</h1>
            <div class="m-auto">

            <form asp-controller="Pizza" asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div>
                    <h4>Titolo</h4>
                        <input asp-for="Pizza.Nome" class="d-blocalert-dark w-50" />
                        <span asp-validation-for="Pizza.Nome" class="text-danger"></span>
                </div>
                <div>
                    <h4>Descrizione</h4>
                        <textarea asp-for="Pizza.Description" class="d-blocalert-dark w-50"></textarea>
                        <span asp-validation-for="Pizza.Description" class="text-danger"></span>
                </div>
                <div>
                    <h4>Immagine</h4>
                    <input asp-for="Pizza.Pic" class="d-blocalert-dark w-50" />
                        <span asp-validation-for="Pizza.Pic" class="text-danger"></span>
                </div>
                <div>
                    <h4>Prezzo</h4>
                        <input asp-for="Pizza.Price" class="d-blocalert-dark w-50" />
                        <span asp-validation-for="Pizza.Price" class="text-danger"></span>
                </div>
                    <div>
                        <h4>Categorie</h4>
                        <select asp-for="Pizza.CategoryId" class="d-blocalert-dark w-50">
                            @foreach (Category category in Model.Categories)
                            {
                                @if (Model.Pizza.CategoryId == category.Id)
                                {
                                    <option value="@category.Id" selected>@category.Name</option>
                                }
                                else
                                {
                                <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Pizza.CategoryId" class="text-danger"></span>
                    </div>

                    <div>
                        <h4>Ingredienti</h4>
                        <select multiple="multiple" asp-for="Ingredients" size="8" class="form-control mb-2 mr-sm-2 ml-sm-3 leftList w-50 m-auto">
                            @foreach (Ingredient ingredient in Model.Ingredients)
                            {
                                <option value="@ingredient.Id">@ingredient.Name</option>
                            }
        
                        </select>
                    </div>

                    <div class="py-5">
                        <input type="submit" class="btn btn-small btn-success" value="Salva"/>
                    </div>
            </form>
                <a href="@Url.Action("Index", "pizza")">Torna alla pagina iniziale</a>
            </div>
        </div>
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
